<title>Register</title>
{{> _errors}}
<div class="card">
    <h5 class="card-header"><strong>Create an Account</strong></h5>
    <div class="card-body"> 
        <form action="/register" method="POST">
        
        <div class="form-group">
            <label for="username"><strong>Username</strong></label>
            <input type="text" name="username" id="username" class="form-control" placeholder="Enter Username" value="{{#if username}}{{username}}{{/if}}">
        </div>
        <div class="form-group mb-4">
            <label for="password"><strong>Password</strong></label>
            <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password" value="{{#if password}}{{password}}{{/if}}">
        </div>
        <button type="submit" class="btn btn-danger btn-block">Register</button>
        
        </form>
    </div>
</div>
